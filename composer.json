{
    "name": "preemstudio/laravel-flash",
    "description": "A package to easily make use of message flashing with Laravel.",
    "license": "MIT",
    "keywords": [
        "PreemStudio",
        "laravel",
        "laravel-flash"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@preem.studio",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/preemstudio/laravel-flash",
    "require": {
        "php": "^8.1",
        "blade-ui-kit/blade-heroicons": "^2.1",
        "illuminate/contracts": "^9.0",
        "spatie/laravel-package-tools": "^1.14"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.29",
        "graham-campbell/analyzer": "^3.1",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.2",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "PreemStudio\\Flash\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Flash": "PreemStudio\\Flash\\Facades\\Flash"
            },
            "providers": [
                "PreemStudio\\Flash\\FlashServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    }
}
